{
    "name": "Front-End-Environment",
    "version": "1.0.0",
    "description": "creating project env",
    "main": "app.js",
    "scripts": {
        "build-css": "node-sass --include--path scss scss/app.scss app/style/css/app.min.css",
        "build-js": "browserify js/**.js>app/js/app.min.js",
        "build": "npm run build-css && npm run build-js",
        "server": "cd app && lite-server",
        "start": "nodemon -e js,scss -x \"npm run build && npm run server\" --ignore app"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mdabdulripon/project-with-Sass.git"
    },
    "author": "Abdul Ripon",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mdabdulripon/project-with-Sass/issues"
    },
    "homepage": "https://github.com/mdabdulripon/project-with-Sass",
    "dependencies": {
        "animate.css": "^3.5.2",
        "bootstrap": "^4.0.0-alpha.6",
        "ionicons": "^3.0.0",
        "jquery": "^3.3.1",
        "jquery-validation": "^1.17.0",
        "tether": "^1.4.3",
        "wowjs": "^1.1.3"
    },
    "devDependencies": {
        "browserify": "^16.0.0",
        "node-sass": "^4.7.2",
        "nodemon": "^1.14.12"
    }
}